<h1>募集詳細画面</h1>
<p>タイトル: <%= @theme.title %></p>
<p>内容: <%= @theme.content %></p>
<p>報酬: <%= @theme.reword %></p>
<p>画像: <%= @theme.img %></p>
<td>
  <% @theme.labels.each do |label| %>
    <%= label.name %>
  <% end %>
</td>
<%= form_with model:[@theme, @idea], local: false do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :img %>
    <%= f.text_area :img %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% unless @theme.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(theme_id: @theme.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>