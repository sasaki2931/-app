<h1>募集一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @themes.each do |theme| %>
  <tr>
    <td><%= theme.title %></td>
    <td><%= theme.content %></td>

    <td><%= link_to '詳細を確認する', theme_path(theme.id) %></td>
    <td><%= link_to "ブログを編集する", edit_theme_path(theme.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'ブログを削除する', theme_path(theme.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'アイデアを募集する',new_theme_path  %>