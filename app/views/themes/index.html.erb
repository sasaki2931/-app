<h1>募集一覧</h1>

<%= search_form_for @search do |f| %>
  <% Label.all.each do |label| %>
    <%= f.check_box :labels_id_eq_any, { multiple: true, checked: label[:checked], disabled: label[:disabled], include_hidden: false }, label[:id] %>
    <label><%= label.name %></label>
  <% end %>
  <%= f.submit "検索" %>
<% end %>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  
    <th>種別</th>
  </tr>

<% @themes.each do |theme| %>
  <tr>
    <td><%= theme.title %></td>
    <td><%= theme.content %></td>
    <td>
      <% theme.labels.each do |label| %>
        <%= label.name %>
      <% end %>
    </td>

    <td><%= link_to '詳細を確認する', theme_path(theme.id) %></td>
  </tr>
<% end %>
</table>
<%= paginate @themes %>

<%= link_to 'アイデアを募集する',new_theme_path  %>